{
  "name": "studio",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --ignore-path .gitignore \"./**/*.+(vue|js|jsx|cjs|mjs|ts|tsx|cts|mts)\" --write",
    "commit": "cz",
    "prepare": "run-script-os",
    "prepare:win32": "husky install",
    "prepare:darwin:linux": "husky install && chmod ug+x .husky/*  && chmod ug+x .git/hooks/*"
  },
  "lint-staged": {
    "./**/*.{ts,js,jsx,tsx}": [
      "yarn lint",
      "yarn format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@iconify/vue": "^4.1.0",
    "@vercel/node": "^2.9.10",
    "axios": "^1.3.4",
    "dayjs": "^1.11.7",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^5.1.0",
    "nanoid": "^4.0.1",
    "pinia": "^2.0.32",
    "pinia-plugin-persistedstate": "^3.1.0",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vue3-lottie": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@fairdataihub/config": "^2.2.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tailwindcss/typography": "^0.5.9",
    "@types/mongo-sanitize": "^1.0.1",
    "@types/node": "^18.14.3",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-custom-order": "^1.0.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "megasanjay-devmoji": "^1.2.1",
    "naive-ui": "^2.34.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "run-script-os": "^1.1.6",
    "tailwindcss": "^3.2.7",
    "tailwindcss-debug-screens": "^2.2.1",
    "typescript": "~4.8.4",
    "vite": "^4.1.5",
    "vue-tsc": "^1.2.0"
  }
}
